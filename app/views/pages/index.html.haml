/ facebook app script
:javascript
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '1786458711673175',
      cookie     : true,
      xfbml      : true,
      version    : 'v2.8'
    });
    FB.AppEvents.logPageView();
  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "//connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));

/ third-party auth
%br/
%br/
- if current_user
  Signed in as: #{current_user.name} - #{image_tag(@auth['info']['image'], width: '50', height: '50')}#{link_to "Sign Out", 'sign_out', method: :delete}
- else
  %p Log In Through:
  = link_to "auth/facebook" do
    = image_tag('facebook.png', width: '40', height:'40')
  = link_to "auth/twitter" do
    = image_tag('twitter.png', width: '40', height:'40')

/ notifies user if signed in or out
- flash.each do |key, value|
  %div
    = value

/ welcomes message if logged in
- if current_user
  %div
    %h1
      Welcome, #{current_user.name}
    %h4
      Logged In With ->
      %strong
        %em= @auth['provider'].capitalize
    = image_tag('eazelsoc.png')
